---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProductCard from '../components/ProductCard.astro';

const featuredProducts = [
	{
		id: "modern-sofa",
		name: "Modern Comfort Sofa",
		price: 1299,
		image: "https://images.pexels.com/photos/1350789/pexels-photo-1350789.jpeg",
		category: "Sofas"
	},
	{
		id: "dining-table",
		name: "Oak Dining Table",
		price: 899,
		image: "https://images.pexels.com/photos/1395967/pexels-photo-1395967.jpeg",
		category: "Tables"
	},
	{
		id: "accent-chair",
		name: "Velvet Accent Chair",
		price: 449,
		salePrice: 349,
		sale: true,
		image: "https://images.pexels.com/photos/586744/pexels-photo-586744.jpeg",
		category: "Chairs"
	},
	{
		id: "bedroom-set",
		name: "Complete Bedroom Set",
		price: 1899,
		image: "https://images.pexels.com/photos/271816/pexels-photo-271816.jpeg",
		category: "Beds"
	}
];
---

<Layout title="FurniCraft - Transform Your Space with Timeless Furniture">
	<Header />
	
	<!-- Hero Section -->
	<section class="hero">
		<div class="hero-content">
			<div class="hero-text">
				<h1>Transform Your Space with Timeless Furniture</h1>
				<p>Discover our curated collection of premium furniture that blends style, comfort, and exceptional craftsmanship for every room in your home.</p>
				<a href="/shop" class="btn btn-primary">Explore Our Collection</a>
			</div>
		</div>
		<div class="hero-image">
			<img src="https://images.pexels.com/photos/1918291/pexels-photo-1918291.jpeg" alt="Beautiful modern living room" />
		</div>
	</section>

	<!-- Promotional Banner -->
	<section class="promo-banner">
		<div class="container text-center">
			<h2>Up to 30% Off on Selected Items!</h2>
			<p>Limited time offer on our most popular furniture pieces</p>
			<a href="/shop?sale=true" class="btn btn-secondary">Shop Sale</a>
		</div>
	</section>

	<!-- Featured Products -->
	<section class="featured-products section-padding">
		<div class="container">
			<div class="section-header text-center">
				<h2>Featured Products</h2>
				<p>Handpicked pieces that define style and comfort</p>
			</div>
			<div class="products-grid grid grid-4">
				{featuredProducts.map(product => (
					<ProductCard {...product} />
				))}
			</div>
			<div class="text-center" style="margin-top: 3rem;">
				<a href="/shop" class="btn btn-primary">View All Products</a>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section class="features section-padding" style="background: #f7fafc;">
		<div class="container">
			<div class="features-grid grid grid-3">
				<div class="feature-card">
					<div class="feature-icon">
						<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M12 2L2 7l10 5 10-5-10-5z"/>
							<path d="M2 17l10 5 10-5"/>
							<path d="M2 12l10 5 10-5"/>
						</svg>
					</div>
					<h3>Quality Craftsmanship</h3>
					<p>Every piece is carefully crafted with attention to detail and built to last for generations.</p>
				</div>
				<div class="feature-card">
					<div class="feature-icon">
						<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
							<circle cx="12" cy="12" r="4"/>
						</svg>
					</div>
					<h3>Sustainable Materials</h3>
					<p>We source responsibly and use eco-friendly materials that are good for you and the planet.</p>
				</div>
				<div class="feature-card">
					<div class="feature-icon">
						<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M7 10v12"/>
							<path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"/>
						</svg>
					</div>
					<h3>Customer Satisfaction</h3>
					<p>Your happiness is our priority. We offer exceptional service and support every step of the way.</p>
				</div>
			</div>
		</div>
	</section>

	<Footer />
</Layout>

<style>
	.hero {
		display: grid;
		grid-template-columns: 1fr 1fr;
		min-height: 80vh;
		align-items: center;
		background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
	}

	.hero-content {
		padding: 4rem 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.hero-text {
		max-width: 500px;
	}

	.hero-text h1 {
		font-size: 3rem;
		color: #1a365d;
		margin-bottom: 1.5rem;
		line-height: 1.1;
	}

	.hero-text p {
		font-size: 1.2rem;
		color: #4a5568;
		margin-bottom: 2rem;
		line-height: 1.6;
	}

	.hero-image {
		height: 80vh;
		overflow: hidden;
	}

	.hero-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.promo-banner {
		background: linear-gradient(135deg, #1a365d 0%, #2c5282 100%);
		color: white;
		padding: 4rem 0;
	}

	.promo-banner h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.promo-banner p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.section-header {
		margin-bottom: 4rem;
	}

	.section-header h2 {
		color: #1a365d;
		margin-bottom: 1rem;
	}

	.section-header p {
		font-size: 1.1rem;
		color: #4a5568;
	}

	.features-grid {
		gap: 3rem;
	}

	.feature-card {
		text-align: center;
		padding: 2rem;
		background: white;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		transition: transform 0.3s ease;
	}

	.feature-card:hover {
		transform: translateY(-4px);
	}

	.feature-icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 80px;
		height: 80px;
		background: #e6fffa;
		color: #1a365d;
		border-radius: 50%;
		margin-bottom: 1.5rem;
	}

	.feature-card h3 {
		color: #1a365d;
		margin-bottom: 1rem;
	}

	.feature-card p {
		color: #4a5568;
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.hero {
			grid-template-columns: 1fr;
			min-height: auto;
		}

		.hero-content {
			padding: 2rem 1rem;
		}

		.hero-text h1 {
			font-size: 2rem;
		}

		.hero-text p {
			font-size: 1rem;
		}

		.hero-image {
			height: 50vh;
		}

		.promo-banner h2 {
			font-size: 1.8rem;
		}

		.promo-banner p {
			font-size: 1rem;
		}

		.features-grid {
			gap: 2rem;
		}

		.feature-card {
			padding: 1.5rem;
		}
	}
</style>